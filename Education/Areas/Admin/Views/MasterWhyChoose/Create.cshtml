@model Education.Areas.Admin.ViewModels.MasterWhyChooseViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <h2 class="fw-bold">MasterWhyChoose</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterWhyChoose">MasterWhyChoose</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="MasterWhyChooseId" class="form-control" type="hidden" value="0" />
    <div class="row m-0">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterWhyChooseIcon" class="form-label"></label>
                <input asp-for="MasterWhyChooseIcon" class="form-control" placeholder="Enter Icon" />
                <span asp-validation-for="MasterWhyChooseIcon" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterWhyChooseTitle" class="form-label"></label>
                <input asp-for="MasterWhyChooseTitle" class="form-control" placeholder="Enter Title" />
                <span asp-validation-for="MasterWhyChooseTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterWhyChooseDescription" class="form-label"></label>
                <textarea asp-for="MasterWhyChooseDescription" class="form-control" placeholder="Enter Description"></textarea>
                <span asp-validation-for="MasterWhyChooseDescription" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="text-end">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>
