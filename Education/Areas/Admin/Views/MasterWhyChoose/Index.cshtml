@model IEnumerable<Education.Models.MasterWhyChoose>

@{
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
    <h2 class="fw-bold">Education</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item">MasterWhyChoose</li>
        </ol>
    </nav>
</div>

<div class="text-end">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<h3></h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                WhyChoose Icon
            </th>
            <th>
                WhyChoose Title
            </th>
            <th>
                WhyChoose Description
            </th>
            <th>operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MasterWhyChooseIcon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MasterWhyChooseTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MasterWhyChooseDescription)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MasterWhyChooseId" style="text-decoration:none"><i style="color:forestgreen;font-size:20px" class="bi bi-pencil-square"></i></a> |
                    <a class="btnDelete" style="text-decoration:none" href="#" data-toggle="modal" data-target="#exampleModal" data-paths="@Url.ActionLink("Delete","MasterWhyChoose",new{Delete=item.MasterWhyChooseId})"><i style="color:red;font-size:20px" class="bi bi-trash-fill"> </i></a>|
                    @if (item.IsActive)
                    {
                        <a asp-action="Active" asp-route-id="@item.MasterWhyChooseId" style="text-decoration:none">
                            <i class="ri-eye-fill " style="font-size:20px"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-action="Active" asp-route-id="@item.MasterWhyChooseId" style="text-decoration:none">
                            <i class="ri-eye-close-fill" style="font-size:20px"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are You sure want to delete this Record ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnClose" data-dismiss="modal">Close</button>
                <input type="button" class="btn btn-danger" value="Delete" id="btnConfirmDelete" />
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        var urlPathDelete = "";

        $(".btnDelete").click(function () {
            console.log($(this).data("paths"));
            urlPathDelete = $(this).data("paths");
            console.log(urlPathDelete);
        });

        $("#btnConfirmDelete").click(function () {
            window.location = urlPathDelete;
        });
    });
</script>