@using System.Security.Claims

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var pagesControllers = new[] {
                "MasterAboutUs", "MasterContactUsInformation", "MasterCourses", "MasterEvents",
                "MasterFeatures", "MasterMenu", "MasterOurServices", "MasterPricing", "MasterSlider",
                "MasterSocialMedium", "MasterTrainers", "MasterUsefullLinks", "MasterWhatPeopleSay",
                "MasterWhyChoose", "SystemSetting"
                };

    var transactionControllers = new[] {
                "TransactionContactUs", "TransactionNewsLetter"
                };

    var isPagesOpen = pagesControllers.Contains(currentController);
    var isTransactionOpen = transactionControllers.Contains(currentController);

    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewBag.Title</title>
    <meta name="robots" content="noindex, nofollow">
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Admin/assets/img/favicon.png" rel="icon">
    <link href="~/Admin/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Vendor CSS Files -->
    <link href="~/Admin/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Admin/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Admin/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Admin/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/Admin/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/Admin/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Admin/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Admin/assets/css/style.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body>
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="#" class="logo d-flex align-items-center">
                <img src="assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">EducationAdmin</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <span class="d-none d-md-block dropdown-toggle ps-2">
                            <i class="bi bi-person-fill me-2" style="font-size:2rem;"></i> @User.Identity.Name
                        </span>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@User.Identity.Name</h6>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-route-id="@userId" asp-action="Details" asp-controller="AppUser">
                                <i class="bi bi-person"></i>
                                <span>My Profile</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-action="NeedHelp" asp-controller="AppUser">
                                <i class="bi bi-question-circle"></i>
                                <span>Need Help?</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-controller="Account" asp-action="LogOut">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Sign Out</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li>

            </ul>
        </nav>

    </header>

    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link @(isPagesOpen ? "" : "collapsed")" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-menu-button-wide"></i><span>Pages</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="components-nav" class="nav-content collapse @(isPagesOpen ? "show" : "")" data-bs-parent="#sidebar-nav">
                    <li>
                        <a asp-action="Index" asp-controller="MasterAboutUs" class="@(currentController == "MasterAboutUs" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterAboutUs</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterContactUsInformation" class="@(currentController == "MasterContactUsInformation" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterContactUsInformation</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterCourses" class="@(currentController == "MasterCourses" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterCourses</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterEvents" class="@(currentController == "MasterEvents" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterEvents</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterFeatures" class="@(currentController == "MasterFeatures" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterFeatures</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterMenu" class="@(currentController == "MasterMenu" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterMenu</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterOurServices" class="@(currentController == "MasterOurServices" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterOurServices</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterPricing" class="@(currentController == "MasterPricing" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterPricing</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterSlider" class="@(currentController == "MasterSlider" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterSlider</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterSocialMedium" class="@(currentController == "MasterSocialMedium" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterSocialMedium</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterTrainers" class="@(currentController == "MasterTrainers" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterTrainers</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterUsefullLinks" class="@(currentController == "MasterUsefullLinks" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterUsefullLinks</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterWhatPeopleSay" class="@(currentController == "MasterWhatPeopleSay" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterWhatPeopleSay</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="MasterWhyChoose" class="@(currentController == "MasterWhyChoose" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>MasterWhyChoose</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="SystemSetting" class="@(currentController == "SystemSetting" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>SystemSetting</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link @(isTransactionOpen ? "" : "collapsed")" data-bs-target="#Transaction-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-menu-button-wide"></i><span>Transaction</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="Transaction-nav" class="nav-content collapse @(isTransactionOpen ? "show" : "")" data-bs-parent="#sidebar-nav">
                    <li>
                        <a asp-action="Index" asp-controller="TransactionContactUs" class="@(currentController == "TransactionContactUs" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>TransactionContactUs</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="TransactionNewsLetter" class="@(currentController == "TransactionNewsLetter" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>TransactionNewsLetter</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li class="nav-heading">Account</li>

            <li class="nav-item">
                <a class="nav-link @(currentController == "AppUser" ? "active" : "collapsed")" asp-action="Index" asp-controller="AppUser">
                    <i class="bi bi-card-list"></i>
                    <span>AppUser</span>
                </a>
            </li>

        </ul>
    </aside>

    <main id="main" class="main">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>EducationAdmin</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
            Designed by <a href="#">EducationAdmin</a>
        </div>
    </footer>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!-- Vendor JS Files -->
    <script src="~/Admin/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Admin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/Admin/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/Admin/assets/vendor/quill/quill.min.js"></script>
    <script src="~/Admin/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Admin/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Admin/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/jquery/jquery.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Admin/assets/js/main.js"></script>
</body>
</html>
