@model Education.Areas.Admin.ViewModels.MasterAboutUsViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <h2 class="fw-bold">MasterAboutUs</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterAboutUs">MasterAboutUs</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MasterAboutUsId" />
    <input type="hidden" asp-for="CreateUser" />
    <input type="hidden" asp-for="CreateDate" />
    <div class="row m-0">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterAboutUsTitle" class="form-label"></label>
                <input asp-for="MasterAboutUsTitle" class="form-control" />
                <span asp-validation-for="MasterAboutUsTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterAboutUsDescription" class="form-label"></label>
                <textarea asp-for="MasterAboutUsDescription" class="form-control"></textarea>
                <span asp-validation-for="MasterAboutUsDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterAboutUsPhone" class="form-label"></label>
                <input asp-for="MasterAboutUsPhone" class="form-control" />
                <span asp-validation-for="MasterAboutUsPhone" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterAboutUsEmail" class="form-label"></label>
                <input asp-for="MasterAboutUsEmail" class="form-control" />
                <span asp-validation-for="MasterAboutUsEmail" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="text-end">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>
