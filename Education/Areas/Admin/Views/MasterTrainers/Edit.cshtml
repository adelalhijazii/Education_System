@model Education.Areas.Admin.ViewModels.MasterTrainersViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <h2 class="fw-bold">MasterTrainers</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterTrainers">MasterTrainers</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MasterTrainersId" />
    <input type="hidden" asp-for="CreateUser" />
    <input type="hidden" asp-for="CreateDate" />
    <div class="row m-0">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterTrainersTitle" class="form-label"></label>
                <input asp-for="MasterTrainersTitle" class="form-control" />
                <span asp-validation-for="MasterTrainersTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterTrainersBreef" class="form-label"></label>
                <input asp-for="MasterTrainersBreef" class="form-control" />
                <span asp-validation-for="MasterTrainersBreef" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterTrainersDescription" class="form-label"></label>
                <textarea asp-for="MasterTrainersDescription" class="form-control"></textarea>
                <span asp-validation-for="MasterTrainersDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterTrainersIcon" class="form-label"></label>
                <input asp-for="MasterTrainersIcon" class="form-control" />
                <span asp-validation-for="MasterTrainersIcon" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterTrainersIconUrl" class="form-label"></label>
                <input asp-for="MasterTrainersIconUrl" class="form-control" />
                <span asp-validation-for="MasterTrainersIconUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="MasterTrainersFile" class="form-label"></label>
                <input asp-for="MasterTrainersFile" class="form-control" />
                <span asp-validation-for="MasterTrainersFile" class="text-danger"></span>
                <input type="hidden" asp-for="MasterTrainersImageUrl" class="form-control" />
            </div>
        </div>
    </div>
    <div class="text-end">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>
