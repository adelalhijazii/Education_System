@model Education.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Contact";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
        <div class="container">
            <h2>Contact Us</h2>
            <p>Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia id aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium. </p>
        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div data-aos="fade-up">
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d13545.756525394996!2d35.904300649999996!3d31.9218331!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sjo!4v1703288272582!5m2!1sen!2sjo" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <div class="container" data-aos="fade-up">
            <div class="row mt-5">
                <div class="col-lg-4 mt-5 mt-lg-0">
                    <div class="info">
                        <div class="address">
                            @Html.Raw(Model.ContactUsInformation1.MasterContactUsInformationIcon)
                            @Html.Raw(Model.ContactUsInformation1.MasterContactUsInformationDescription)
                        </div>

                        <div class="email">
                            @Html.Raw(Model.ContactUsInformation2.MasterContactUsInformationIcon)
                            @Html.Raw(Model.ContactUsInformation2.MasterContactUsInformationDescription)
                        </div>

                        <div class="phone">
                            @Html.Raw(Model.ContactUsInformation3.MasterContactUsInformationIcon)
                            @Html.Raw(Model.ContactUsInformation3.MasterContactUsInformationDescription)
                        </div>
                    </div>
                </div>

                <div class="col-lg-8 mt-5 mt-lg-0">
                    <form asp-action="ContactUs">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input asp-for="ContactUs.TransactionContactUsName" class="form-control" placeholder="Full Name">
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input asp-for="ContactUs.TransactionContactUsEmail" class="form-control" placeholder="Email Address">
                            </div>
                            <div class="form-group mt-3">
                                <input asp-for="ContactUs.TransactionContactUsSubject" class="form-control" placeholder="Subject">
                            </div>
                            <div class="form-group mt-3">
                                <textarea asp-for="ContactUs.TransactionContactUsMessage" class="form-control" placeholder="Message" rows="5"></textarea>
                                <button class="submit btn-style" style="background: #5fcf80; border: 0; padding: 10px 35px; color: #fff; transition: 0.4s; border-radius: 50px; margin: 10px 0px 0px 350px;" type="submit">SEND MESSAGE</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section><!-- End Contact Section -->

</main><!-- End #main -->