@model Education.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Pricing";
}

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
        <div class="container">
            <h2>Pricing</h2>
            <p>Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia id aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium. </p>
        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Pricing Section ======= -->
    <section id="pricing" class="pricing">
        <div class="container" data-aos="fade-up">

            <div class="row">
                @foreach (var item in Model.ListPricing)
                {
                    <div class="col-lg-3 col-md-6 mt-4 mt-lg-4">
                        <div class="box">
                            @Html.Raw(item.MasterPricingTitle)
                            @Html.Raw(item.MasterPricingBreef)
                            @Html.Raw(item.MasterPricingDescription)
                            <div class="btn-wrap">
                                <a href="#" class="btn-buy">Buy Now</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </section><!-- End Pricing Section -->

</main><!-- End #main -->